{
  "identifier": "default",
  "description": "Permissions for the main application functionality",
  "windows": ["main", "prefs", "ws-lokus-workspace"],
  "permissions": [
    "core:path:allow-resolve-directory",
    "core:path:allow-join",
    "core:event:allow-listen",
    "core:event:allow-unlisten",
    "core:event:allow-emit",
    "global-shortcut:allow-register",
    "global-shortcut:allow-unregister-all",
    "dialog:allow-save",
    "dialog:allow-open",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "$DOCUMENT/**" },
        { "path": "$APP/**" }
      ]
    },
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:allow-read-dir",
    "fs:allow-create",
    "fs:allow-remove",
    "fs:allow-rename",
    "fs:allow-exists"
  ]
}